<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Materialverwaltung</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Materialverwaltung.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Startseite</a>
                    <a asp-area="" asp-controller="Material" asp-action="Index" class="navbar-brand">Material</a>
                    <a asp-area="" asp-controller="Materialgruppe" asp-action="Index" class="navbar-brand">Materialgruppe</a>
                </div>                
            </div>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
    </div>

    <hr />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Materialverwaltung
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
